{
  "name": "feather",
  "version": "1.0.0",
  "type": "module",
  "description": "Ghost theme built with React 18 and Vite",
  "config": {
    "posts_per_page": 6,
    "image_sizes": {
      "xxs": {
        "width": 30
      },
      "xs": {
        "width": 100
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 600
      },
      "l": {
        "width": 1000
      },
      "xl": {
        "width": 2000
      }
    },
    "custom": {
      "content_api_key": {
        "type": "text",
        "description": "Ghost Content API Key (Create in Settings > Integrations)",
        "default": "22444f78447b972424a05ad2a0"
      }
    }
  },
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint source --ext .js,.jsx"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tanaykumarbera/feather.git"
  },
  "keywords": [
    "ghost",
    "react",
    "ghost-theme",
    "vite"
  ],
  "author": {
    "name": "Tanay Kumar Bera",
    "email": "tanaykumarbera@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tanaykumarbera/feather/issues"
  },
  "homepage": "https://github.com/tanaykumarbera/feather#readme",
  "devDependencies": {
    "@tryghost/content-api": "^1.11.0",
    "@vitejs/plugin-react": "^4.2.0",
    "eslint": "^8.50.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "less": "^4.5.1",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "lodash.throttle": "^4.1.1",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet": "^6.1.0",
    "react-redux": "^8.1.0",
    "react-router-dom": "^6.20.0",
    "react-transition-group": "^4.4.5",
    "redux": "^4.2.0",
    "redux-thunk": "^2.4.0",
    "sanitize-html": "^2.11.0"
  }
}